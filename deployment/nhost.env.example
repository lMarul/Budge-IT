# Nhost Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-here
FLASK_ENV=production
FLASK_APP=wsgi.py

# Database Configuration (Nhost PostgreSQL)
DATABASE_URL=postgresql://nhost:password@localhost:5432/budge_it

# Nhost-specific settings
NHOST_BACKEND_URL=https://your-project.nhost.run
NHOST_GRAPHQL_URL=https://your-project.nhost.run/v1/graphql
NHOST_STORAGE_URL=https://your-project.nhost.run/v1/storage

# Optional: Email configuration (if using Nhost Auth)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True 